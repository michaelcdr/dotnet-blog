@model List<CategoriaViewModel>
 
@if (Model == null || Model.Count == 0)
{
    <div class="container  pt-3">
        <div class="card">
            <div class="card-body">
                <div class="alert alert-info">Nenhuma categoria cadastrada</div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container  pt-3">
       <nav aria-label=" breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active text-white" aria-current="page">Lista de categorias</li>
            </ol>
        </nav> 
        <table class="list-group ">
            @foreach (var item in Model)
            {
                <tr class="list-group-item d-flex justify-content-between align-items-center">

                    <td>
                        <span class="badge bg-primary rounded-pill ">@item.QtdPosts</span>

                        <a asp-action="PorCategoria" asp-controller="Post" asp-route-id="@item.Id">
                            @item.Nome 
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="AdminCategoria" 
                            asp-route-id="@item.Id">Editar</a>

                        <a class="btn btn-sm btn-danger" >Remover</a>

                    </td>                    
                </tr>
            }
        </table> 
    
    </div>
}
@section scripts{
    <script>
        $(function(){
            $(".nav-link").last().addClass("active");
        });
    </script>
}